body
	font-size 1.8em
	padding-top: 50px
	padding-bottom: 20px

video
	max-width: 100%;
	height: auto;

.oculto
	display none

.video-container
	position: relative;
	padding-bottom: 56.25%;
	padding-top: 30px;
	height: 0;
	overflow: hidden;

	iframe, object, embed
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;

.btn_autorizar
	text-decoration: none
	color white

	:hover
		color blue
		text-decoration: none

.clear
	clear both

.item
	img
		margin 0 auto
		text-align: center
		width 360px

.jumbotron
	padding 0.5em

.letra_grande
	font-size 1.5em